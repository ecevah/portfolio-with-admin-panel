<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= project ? project.name : 'Project' %> - Nehir</title>
  <link rel="icon" href="/images/favico.svg" type="image/svg+xml" />
  <link rel="stylesheet" href="/stylesheets/site.css" />
</head>
<body>
  <!-- Fixed Header -->
  <header class="header">
    <div class="container">
      <div class="header-content">
        <button class="menu-toggle" aria-label="Menüyü aç/kapat" aria-expanded="false">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
        <nav class="nav-left">
          <% (siteConfig && siteConfig.nav ? siteConfig.nav : [{label:'Home',href:'/'},{label:'About',href:'/about'},{label:'Projects',href:'/projects'}]).forEach(function(item){ %>
            <a href="<%= item.href %>"><%= item.label %></a>
          <% }) %>
        </nav>
        <a href="/" class="logo">
          <% if (siteConfig && siteConfig.logoPath) { %>
            <img src="<%= siteConfig.logoPath %>" alt="Logo" />
          <% } else { %>
            <span><%= siteConfig && siteConfig.siteName ? siteConfig.siteName : 'Nehir' %></span>
          <% } %>
        </a>
        <div class="social-links">
          <% (siteConfig && siteConfig.socialLinks ? siteConfig.socialLinks : []).forEach(function(s){ %>
            <a href="<%= s.url %>" target="_blank" rel="noopener" title="<%= s.name %>">
              <img src="<%= s.icon %>" alt="<%= s.name %>" />
            </a>
          <% }) %>
        </div>
      </div>
    </div>
    <nav class="mobile-nav" aria-label="Mobil Menü">
      <div class="mobile-inner">
        <div class="mobile-top">
          <a href="/" class="mobile-logo" aria-label="Ana sayfa">
            <% if (siteConfig && siteConfig.logoPath) { %>
              <img src="<%= siteConfig.logoPath %>" alt="Logo" />
            <% } else { %>
              <span><%= siteConfig && siteConfig.siteName ? siteConfig.siteName : 'Nehir' %></span>
            <% } %>
          </a>
          <button class="menu-close" aria-label="Menüyü kapat">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6 6l12 12M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>
        <div class="mobile-links">
          <% (siteConfig && siteConfig.nav ? siteConfig.nav : [{label:'Home',href:'/'},{label:'About',href:'/about'},{label:'Projects',href:'/projects'}]).forEach(function(item){ %>
            <a href="<%= item.href %>"><%= item.label %></a>
          <% }) %>
        </div>
        <div class="mobile-socials">
          <% (siteConfig && siteConfig.socialLinks ? siteConfig.socialLinks : []).forEach(function(s){ %>
            <a href="<%= s.url %>" target="_blank" rel="noopener" title="<%= s.name %>">
              <img src="<%= s.icon %>" alt="<%= s.name %>" />
            </a>
          <% }) %>
        </div>
      </div>
    </nav>
  </header>

  <!-- Project Detail Section -->
  <section class="section" style="padding-top: 8rem;">
    <div class="container">
      <div class="section-header" style="text-align: left; margin-bottom: 3rem;">
        <h1 class="section-title"><%= project ? project.name : 'Proje' %></h1>
        <% if (project && project.description) { %>
          <p class="section-subtitle" style="text-align: left; margin: 0;"><%= project.description %></p>
        <% } %>
      </div>
      
      <% if (details && details.length > 0) { %>
        <div class="project-detail-flow">
          <% details.forEach(function(detail, index) { %>
            <% if (detail.type === 'Text') { %>
              <div class="proj-text fade-in">
                <%= detail.content %>
              </div>
            <% } else if (detail.type === 'Double Text') { %>
              <div class="proj-text-columns fade-in">
                <%= detail.content %>
              </div>
            <% } else if (detail.type === 'Image') { %>
              <div class="proj-image fade-in">
                <% if (detail.photo) { %>
                  <img src="<%= detail.photo %>" alt="Proje görseli" />
                <% } %>
              </div>
            <% } else if (detail.type === 'Double Image') { %>
              <div class="proj-images fade-in">
                <% if (detail.photo) { %><img src="<%= detail.photo %>" alt="Proje görseli" /><% } %>
                <% if (detail.secondPhoto) { %><img src="<%= detail.secondPhoto %>" alt="Proje görseli" /><% } %>
              </div>
            <% } else { %>
              <!-- fallback: show content or image if any -->
              <% if (detail.content) { %>
                <div class="proj-text"><%= detail.content %></div>
              <% } else if (detail.photo) { %>
                <div class="proj-image"><img src="<%= detail.photo %>" alt="Proje görseli" /></div>
              <% } %>
            <% } %>
          <% }) %>
        </div>
      <% } else { %>
        <div class="project-detail-flow">
          <div class="proj-text fade-in">Bu proje için içerik henüz eklenmemiş.</div>
        </div>
      <% } %>
      
      <!-- Back to Projects Button -->
      <div style="text-align: center; margin-top: 4rem;">
        <a href="/projects" class="cta-button">Back to All Projects</a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-cta">
        <div class="footer-left">
          <h3 class="footer-head">Let’s work together!</h3>
          <div class="footer-socials">
            <% (siteConfig && siteConfig.socialLinks ? siteConfig.socialLinks : []).forEach(function(s){ %>
              <a href="<%= s.url %>" target="_blank" rel="noopener" title="<%= s.name %>">
                <img src="<%= s.icon %>" alt="<%= s.name %>" />
              </a>
            <% }) %>
          </div>
        </div>
        <div class="footer-right">
          <a class="footer-email" href="mailto:nehir@gmail.com">nehir@gmail.com</a>
        </div>
      </div>
      <div class="footer-bottom">© 2025 Burcu Nehir Tüm</div>
    </div>
  </footer>

  <script>
    // Fade in animation on scroll
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);

    document.querySelectorAll('.fade-in').forEach(el => { observer.observe(el); });

    // Mobile nav toggle
    (function(){
      const toggle = document.querySelector('.menu-toggle');
      const mobile = document.querySelector('.mobile-nav');
      if (!toggle || !mobile) return;
      toggle.addEventListener('click', function(){
        const isOpen = document.body.classList.toggle('nav-open');
        toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      });
      window.addEventListener('resize', function(){
        if (window.innerWidth > 768 && document.body.classList.contains('nav-open')) {
          document.body.classList.remove('nav-open');
          toggle.setAttribute('aria-expanded', 'false');
        }
      });
      const closer = document.querySelector('.menu-close');
      if (closer) closer.addEventListener('click', function(){
        document.body.classList.remove('nav-open');
        toggle && toggle.setAttribute('aria-expanded', 'false');
      });
    })();
  </script>
</body>
</html>


