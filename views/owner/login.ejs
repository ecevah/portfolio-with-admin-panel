<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="auth-wrap">
      <div class="auth-grid">
        <div class="auth-brand">
          <div class="brand-title">Admin Panel</div>
          
        </div>
        <div class="auth-card">
          <div class="header">Yönetim Girişi</div>
          <div class="desc">Devam etmek için kullanıcı adı ve şifrenizi girin.</div>
          <% if (error) { %>
            <div class="alert alert-error"><%= error %></div>
          <% } %>
          <form method="post" action="/hosgeldin/sahip/login" novalidate>
            <div class="form-group">
              <label>Kullanıcı Adı</label>
              <input class="form-control" type="text" name="username" autocomplete="username" required />
            </div>
            <div class="form-group">
              <label>Şifre</label>
              <input class="form-control" type="password" name="password" autocomplete="current-password" required />
            </div>
            <div class="form-actions">
              <button class="btn btn-primary" type="submit">Giriş Yap</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
  </html>


