<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div style="max-width:480px;margin:40px auto;padding:24px;border:1px solid #ddd;border-radius:8px;">
      <h2 style="margin-top:0;">Kayıt Ol</h2>
      <% if (error) { %>
        <div style="color:#b00020;margin-bottom:12px;"><%= error %></div>
      <% } %>
      <form method="post" action="/hosgeldin/sahip/register">
        <div style="margin-bottom:12px;">
          <label>Kullanıcı Adı</label>
          <input type="text" name="username" required style="width:100%;padding:8px;" />
        </div>
        <div style="margin-bottom:12px;">
          <label>Ad Soyad</label>
          <input type="text" name="nameSurname" required style="width:100%;padding:8px;" />
        </div>
        <div style="margin-bottom:12px;">
          <label>Şifre</label>
          <input type="password" name="password" required style="width:100%;padding:8px;" />
        </div>
        <button type="submit" style="padding:10px 16px;">Kayıt Ol</button>
      </form>
      <div style="margin-top:12px;">
        Hesabın var mı? <a href="/hosgeldin/sahip/login">Giriş yap</a>
      </div>
    </div>
  </body>
  </html>


